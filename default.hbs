      <a href="#/portal/signup" class="btn-primary">S'abonner</a>
      {{/if}}
    </div>
  </nav>

  <!-- Main Content -->
  <main class="site-main">
    {{{body}}}
  </main>

{{!-- Footer only on non-home and non-about pages --}}
{{#match body_class "~" "home-template"}}
{{else}}
  {{#match body_class "~" "page-about"}}
  {{else}}
  <!-- Footer -->
  <footer class="site-footer">
    <div class="footer-container">
      <div class="footer-content">
        <div class="footer-brand">
          <a href="{{@site.url}}" class="footer-logo">
            <span class="logo-bracket">&gt;_</span>{{@site.title}}
          </a>
          <p class="footer-description">{{@site.description}}</p>
        </div>

        <div class="footer-social">
          <h4>Suivez-nous</h4>
          <div class="social-links">
            {{#if @site.twitter}}
