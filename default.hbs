                  <div class="dropdown-card-icon">üìù</div>
                  <div class="dropdown-card-title">Notes de version</div>
                  <div class="dropdown-card-desc">Changelog et mises √† jour</div>
                </a>
              </div>
            </div>
          </li>
          <li class="nav-item">
            <a href="{{@site.url}}/about/" class="nav-link {{link_class for="/about/" activeClass="active"}}">√Ä propos</a>
          </li>
        </ul>
      </nav>

      <div class="header-actions">
        <!-- Search Button -->
        <button class="btn-search" aria-label="Rechercher" data-ghost-search>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"/>
            <path d="M21 21l-4.35-4.35"/>
          </svg>
        </button>

        {{#if @member}}
        <a href="/account" class="btn-ghost {{link_class for="/account/" activeClass="active"}}"">Mon compte</a>
        {{else}}
        <a href="#/portal/signin" class="btn-ghost">Log in</a>
        <a href="#/portal/signup" class="btn-primary">S'abonner</a>
        {{/if}}

        <!-- Mobile Menu Button -->
        <button class="mobile-menu-btn" aria-label="Menu" onclick="toggleMobileMenu()">
          <span></span>
