            <path d="M6 9l6 6 6-6" />
          </svg>
        </a>
        <div class="mobile-dropdown" id="mobileDropdown">
          <a href="{{@site.url}}/tag/k8s-deep-dive/" class="mobile-dropdown-card">
            <span class="mobile-dropdown-icon">‚ò∏Ô∏è</span>
            <div class="mobile-dropdown-text">
              <div class="mobile-dropdown-title">K8S Deep Dive</div>
              <div class="mobile-dropdown-desc">Plong√©e dans Kubernetes</div>
            </div>
          </a>
          <a href="{{@site.url}}/tag/itil/" class="mobile-dropdown-card">
            <span class="mobile-dropdown-icon">üìã</span>
