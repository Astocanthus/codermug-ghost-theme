<style>
/* ==========================================================================
   Circuit Background Animation Styles
   ========================================================================== */
#circuit-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -10;
  overflow: hidden;
  background: #050508;
  opacity: 0.8;
}

.circuit-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
  z-index: 10;
}

.circuit-overlay-content {
  text-align: center;
}

.circuit-overlay-logo {
  font-family: 'JetBrains Mono', monospace;
  font-size: clamp(2.5rem, 8vw, 5rem);
  font-weight: 700;
  color: #ff8c00;
  text-shadow: 
    0 0 10px rgba(255, 140, 0, 0.8),
    0 0 30px rgba(255, 140, 0, 0.6),
    0 0 60px rgba(255, 140, 0, 0.3);
  letter-spacing: 0.15em;
  margin-bottom: 1rem;
}

.circuit-overlay-logo .cursor {
  display: inline-block;
  width: 0.3em;
  height: 0.8em;
  background: #ff8c00;
  margin-left: 0.2em;
  animation: cursor-blink 1s step-end infinite;
  box-shadow: 
    0 0 10px rgba(255, 140, 0, 0.8),
    0 0 20px rgba(255, 140, 0, 0.5);
}

@keyframes cursor-blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

.circuit-overlay-status {
  font-family: 'JetBrains Mono', monospace;
  font-size: clamp(0.7rem, 1.5vw, 0.875rem);
  font-weight: 500;
  letter-spacing: 0.4em;
  text-transform: uppercase;
}

.circuit-overlay-status.online {
  color: rgba(255, 140, 0, 0.5);
}

.circuit-overlay-status.offline {
  color: #ff4444;
  text-shadow: 0 0 15px rgba(255, 68, 68, 0.5);
}

.circuit-overlay-status.maintenance {
  color: #ffaa00;
  text-shadow: 0 0 15px rgba(255, 170, 0, 0.4);
}

.circuit-overlay-status.error {
  color: #ff3333;
  text-shadow: 0 0 20px rgba(255, 51, 51, 0.6);
}
</style>
